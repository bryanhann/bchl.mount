#!/bin/bash
main() {
    [ "$1" = "-t" ] || return
    local key=$2
    local val=$3
    shift
    local here=$PWD
    local root=$(dirname $PWD)
    local name=$(basename $root)
    local prefix=DEVICE_${name}
    export ${prefix}__ROOT__=${root}
    [ "$key" = "" ] || export ${prefix}_${key}=${root}/${val}
}
borg.assert.insitu && main $*
